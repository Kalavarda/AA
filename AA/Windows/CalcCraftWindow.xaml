<Window x:Class="AA.Windows.CalcCraftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculation" Height="400" Width="450" Style="{StaticResource DefaultWindow}" WindowStartupLocation="CenterOwner">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<StackPanel x:Name="_panel" Margin="10" Visibility="Collapsed">
			
		</StackPanel>

		<ScrollViewer Grid.Row="1" Margin="10">
			<StackPanel x:Name="_panel2">
			</StackPanel>
		</ScrollViewer>
		
		<StackPanel Grid.Row="2" Orientation="Horizontal">
			<TextBlock Text="Total: "/>
			<TextBlock x:Name="tbTotal"/>
		</StackPanel>
	</Grid>
</Window>
