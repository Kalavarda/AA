<Window x:Class="Buffs.BuffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Buff" Height="140" Width="240" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Margin="5">
			<TextBlock Text="HH: "/>
			<TextBox x:Name="_remainH"/>
			<TextBlock Text=" MM: "/>
			<TextBox x:Name="_remainM"/>
		</StackPanel>

		<Button Content="OK" Grid.Row="2" HorizontalAlignment="Right" Click="OnOkClick" IsDefault="True"/>
	</Grid>
</Window>
